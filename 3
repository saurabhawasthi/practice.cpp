 #include <iostream>
using namespace std;
int main()
{
    int month number,days;
    cout<<"enter month number :\n";
    cin>>month number;
    switch(month number)
    {
    case 1 :
    case 3 :
    case 5 :
    case 7 :
    case 8 :
    case 10 :
    case 12 :
    cout<<"days =31 :\n";
    break;
    case 4 :
    case 6 :
    case 9 :
    case 11 :
    case 12 :
    cout<<"days =30 :\n";
    break;
    case 2 :
    cout<<"days =28 :\n";
    break;
    default :
    cout<<"invalid choice :\n";
    break;
    }
    return 0;
}
