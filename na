# practice.cpp
#include <iostream>
 using namespace std;
 int main()
 {
     int bs,gp,da,hra,da1,hra1;
     cout<<"enter basic salary :\n";
     cin>>bs;
     cout<<"enter da :\n";
     cin>>da;
     cout<<"enter hra :\n";
     cin>>hra;
     da=(da1*bs)/100;
     hra=(hra*bs)/100;
     gp=(bs+da+hra);
     cout<<"gross payment = "<<gp<<endl;
     return 0;
  }
